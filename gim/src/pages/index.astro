---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout showNavbar showSidebar>
  <section
    class="flex flex-col lg:flex-row gap-8 w-full max-w-7xl mx-auto pt-32 px-2 md:px-8 pl-24"
  >
    <div class="flex flex-col items-center gap-8 w-full max-w-xs mx-auto lg:pl-20 xl:pl-0">
      <div class="relative flex flex-col items-center">
        <svg width="220" height="220" viewBox="0 0 220 220" class="mb-2">
          <circle
            cx="110"
            cy="110"
            r="105"
            fill="none"
            stroke="#37FFC7"
            stroke-width="1.2"
            opacity="0.3"></circle>
          <circle
            cx="110"
            cy="110"
            r="105"
            fill="none"
            stroke="#37FFC7"
            stroke-width="5"
            stroke-dasharray="710"
            stroke-dashoffset="640"
            stroke-linecap="round"
            style="transition: stroke-dashoffset 1s;"
            transform="rotate(-90 110 110)"></circle>
        </svg>
        <div
          class="absolute top-0 left-0 w-full h-full flex flex-col items-center justify-center"
        >
          <span class="text-[#37FFC7] text-lg text-center"
            >Índice de rendimiento<br />(kWh/kWp/día)</span
          >
          <span class="text-[#37FFC7] text-5xl font-light mt-2">3.5</span>
        </div>
      </div>
      <button
        class="border border-[#37FFC7] text-[#37FFC7] rounded-full px-6 py-2 mb-2 hover:bg-[#37FFC7]/10 transition"
        >Historial<br class="block md:hidden" /> de Mantenimiento</button
      >
      <ul class="w-full flex flex-col gap-3 ml-0 md:ml-12">
        <li class="flex items-start gap-4">
          <span class="mt-1 w-6 h-6 flex items-center justify-center">
            <span class="block w-4 h-4 rounded-full border-2 border-[#7FF9D1]"
            ></span>
          </span>
          <div class="flex flex-col">
            <span class="text-[#7FF9D1] text-sm font-semibold leading-tight"
              >15/05/2023 | Inversor</span
            >
            <span class="text-[#4FC3F7] text-sm font-light leading-tight"
              >Preventivo | $ 250</span
            >
          </div>
        </li>
        <li class="flex items-start gap-4">
          <span class="mt-1 w-6 h-6 flex items-center justify-center">
            <span class="block w-4 h-4 rounded-full border-2 border-[#7FF9D1]"
            ></span>
          </span>
          <div class="flex flex-col">
            <span class="text-[#7FF9D1] text-sm font-semibold leading-tight"
              >30/10/2023 | Panel</span
            >
            <span class="text-[#4FC3F7] text-sm font-light leading-tight"
              >Correctivo | $ 375</span
            >
          </div>
        </li>
        <li class="flex items-start gap-4">
          <span class="mt-1 w-6 h-6 flex items-center justify-center">
            <span class="block w-4 h-4 rounded-full border-2 border-[#7FF9D1]"
            ></span>
          </span>
          <div class="flex flex-col">
            <span class="text-[#7FF9D1] text-sm font-semibold leading-tight"
              >15/02/2024 | Panel</span
            >
            <span class="text-[#4FC3F7] text-sm font-light leading-tight"
              >Preventivo | $ 250</span
            >
          </div>
        </li>
        <li class="flex items-start gap-4">
          <span class="mt-1 w-6 h-6 flex items-center justify-center">
            <span class="block w-4 h-4 rounded-full border-2 border-[#7FF9D1]"
            ></span>
          </span>
          <div class="flex flex-col">
            <span class="text-[#7FF9D1] text-sm font-semibold leading-tight"
              >15/06/2024 | Inversor</span
            >
            <span class="text-[#4FC3F7] text-sm font-light leading-tight"
              >Preventivo | $ 250</span
            >
          </div>
        </li>
        <li class="flex items-start gap-4">
          <span class="mt-1 w-6 h-6 flex items-center justify-center">
            <span class="block w-4 h-4 rounded-full border-2 border-[#7FF9D1]"
            ></span>
          </span>
          <div class="flex flex-col">
            <span class="text-[#7FF9D1] text-sm font-semibold leading-tight"
              >15/11/2024 | Panel</span
            >
            <span class="text-[#4FC3F7] text-sm font-light leading-tight"
              >Correctivo | $ 380</span
            >
          </div>
        </li>
      </ul>
      <button
        class="border border-[#37FFC7] text-[#37FFC7] rounded-full px-6 py-1 hover:bg-[#37FFC7]/10 transition"
        >Sig</button
      >
    </div>
    <div class="flex flex-col items-center gap-8 w-full max-w-3xl mx-auto">
      <div
        class="flex flex-col lg:flex-wrap xl:flex-nowrap lg:flex-row gap-6 justify-center items-center mb-4 w-full"
      >
        <div
          class="relative bg-[#002633] rounded-sm px-6 py-6 flex flex-col items-center h-[220px] min-w-[180px] w-full max-w-xs mx-auto"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="96"
            height="96"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="w-20 h-20 mb-4 absolute -top-8 left-1/2 -translate-x-1/2 z-10"
            ><circle cx="12" cy="8" r="5" fill="#7FF9D1" stroke="none"></circle>
            <ellipse cx="12" cy="17" rx="8" ry="5" fill="#7FF9D1" stroke="none"
            ></ellipse>
            <circle
              cx="12"
              cy="12"
              r="11"
              stroke="none"
              fill="#5FE3B1"
              opacity="0.7"></circle>
          </svg>
          <div class="flex flex-col items-center pt-8">
            <span class="text-[#37FFC7] text-base text-center"
              >ID del sistema fotovoltaico</span
            >
            <span class="text-[#37FFC7] text-lg font-mono mt-1">0213202501</span
            >
            <div class="flex gap-2 mt-2">
              <button
                class="border border-[#37FFC7] rounded-full p-2 text-[#37FFC7] mt-4 hover:bg-[#37FFC7]/10 transition"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-6 w-6"
                  ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                  ></path><path d="M10 14l11 -11"></path><path
                    d="M21 3l-6.5 18a.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a.55 .55 0 0 1 0 -1l18 -6.5"
                  ></path></svg
                >
              </button>
              <button
                class="border border-[#37FFC7] rounded-full p-2 text-[#37FFC7] mt-4 hover:bg-[#37FFC7]/10 transition"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6"
                  ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                  ></path><path d="M8 9h8"></path><path d="M8 13h6"></path><path
                    d="M18 4a3 3 0 0 1 3 3v8a3 3 0 0 1 -3 3h-5l-5 3v-3h-2a3 3 0 0 1 -3 -3v-8a3 3 0 0 1 3 -3h12z"
                  ></path></svg
                >
              </button>
            </div>
          </div>
        </div>
        <div
          class="bg-[#002633] rounded-sm px-6 py-6 flex flex-col items-center justify-center h-[220px] min-w-[180px] w-full md:w-auto"
        >
          <span class="text-[#37FFC7] text-base text-center"
            >Capacidad instalada (kWp)</span
          >
          <span class="text-[#37FFC7] text-3xl mt-2">500</span>
          <button
            class="border border-[#37FFC7] rounded-full p-2 text-[#37FFC7] mt-4 hover:bg-[#37FFC7]/10 transition"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-6 h-6"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"></path><path
                d="M7 11l5 5l5 -5"></path><path d="M12 4l0 12"></path></svg
            >
          </button>
        </div>
        <div
          class="bg-[#002633] rounded-sm px-6 py-6 flex flex-col items-center justify-center h-[220px] min-w-[180px] w-full md:w-auto"
        >
          <span class="text-[#37FFC7] text-base text-center mb-5"
            >Tipo de sistema</span
          >
          <span class="text-[#37FFC7] text-base font-medium mt-2"
            >Conectado a Red</span
          >
          <div class="flex gap-2 mt-2">
            <button
              class="border border-[#37FFC7] rounded-full p-2 text-[#37FFC7] mt-4 hover:bg-[#37FFC7]/10 transition"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-6 w-6"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M10 14l11 -11"></path><path
                  d="M21 3l-6.5 18a.55 .55 0 0 1 -1 0l-3.5 -7l-7 -3.5a.55 .55 0 0 1 0 -1l18 -6.5"
                ></path></svg
              >
            </button>
            <button
              class="border border-[#37FFC7] rounded-full p-2 text-[#37FFC7] mt-4 hover:bg-[#37FFC7]/10 transition"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="w-6 h-6"
                ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                  d="M8 9h8"></path><path d="M8 13h6"></path><path
                  d="M18 4a3 3 0 0 1 3 3v8a3 3 0 0 1 -3 3h-5l-5 3v-3h-2a3 3 0 0 1 -3 -3v-8a3 3 0 0 1 3 -3h12z"
                ></path></svg
              >
            </button>
          </div>
        </div>
        <div
          class="bg-[#002633] rounded-sm px-6 py-6 flex flex-col items-center justify-center h-[220px] min-w-[180px] w-full md:w-auto"
        >
          <span class="text-[#37FFC7] text-base text-center"
            >Fabricante/modelo<br />Panel/Inversor</span
          >
          <span class="text-[#37FFC7] text-lg font-mono mt-2">SUNTECH</span>
          <button
            class="border border-[#37FFC7] rounded-full p-2 text-[#37FFC7] mt-4 hover:bg-[#37FFC7]/10 transition"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-6 h-6"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"></path><path
                d="M7 11l5 5l5 -5"></path><path d="M12 4l0 12"></path></svg
            >
          </button>
        </div>
      </div>
      <div class="rounded-sm flex flex-col gap-2 w-full max-w-2xl mx-auto">
        <div class="flex justify-center">
          <button
            class="border border-[#37FFC7] text-[#37FFC7] rounded-full px-6 py-1 hover:bg-[#37FFC7]/10 transition w-20 flex items-center justify-center"
            >Amet</button
          >
        </div>
        <div class="flex justify-between items-center mb-2 md:ml-12 lg:ml-0">
          <span class="text-[#37FFC7] text-lg text-center"
            >Generación de energía</span
          >
          <span class="text-[#37FFC7] text-sm">2025</span>
        </div>
        <div class="relative w-full flex items-end justify-center mt-6 md:ml-10 lg:ml-0">
          <div
            class="absolute inset-0 w-full h-full bg-[#002633] rounded-sm z-0"
          >
          </div>
          <div class="w-full h-56 md:h-64 flex items-end relative z-10">
            <svg
              viewBox="0 0 500 200"
              class="w-full h-full absolute top-0 left-0 z-0"
              preserveAspectRatio="none"
            >
              <defs>
                <linearGradient id="chartGradient" x1="0" y1="0" x2="0" y2="1">
                  <stop offset="0%" stop-color="#37FFC7" stop-opacity="0.22"
                  ></stop>
                  <stop offset="100%" stop-color="#001117" stop-opacity="0.1"
                  ></stop>
                </linearGradient>
              </defs>
              <polygon
                points="0,200 60,110 120,80 200,120 280,100 360,160 440,40 480,100 500,200 0,200"
                fill="url(#chartGradient)"></polygon>
              <polyline
                fill="none"
                stroke="#37FFC7"
                stroke-width="1.2"
                points="0,200 60,110 120,80 200,120 280,100 360,160 440,40 480,100 500,200"
              ></polyline>
              <g>
                <circle cx="60" cy="110" r="4" fill="#7FF9D1"></circle>
                <circle cx="120" cy="80" r="4" fill="#7FF9D1"></circle>
                <circle cx="200" cy="120" r="4" fill="#7FF9D1"></circle>
                <circle cx="280" cy="100" r="4" fill="#7FF9D1"></circle>
                <circle cx="360" cy="160" r="4" fill="#7FF9D1"></circle>
                <circle cx="440" cy="40" r="4" fill="#7FF9D1"></circle>
                <circle cx="480" cy="100" r="4" fill="#7FF9D1"></circle>
              </g>
            </svg>
          </div>
        </div>
        <div class="flex justify-end gap-4 mt-1">
          <button class="text-[#37FFC7] text-2xl rounded-lg hover:bg-[#28CA9E]/10 transition-colors w-10 h-10 flex items-center justify-center"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-8 h-8"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2"></path><path
                d="M7 11l5 5l5 -5"></path><path d="M12 4l0 12"></path></svg
            ></button
          >
          <button class="text-[#37FFC7] text-2xl rounded-lg hover:bg-[#28CA9E]/10 transition-colors w-10 h-10 flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="w-8 h-8"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M17 17h2a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2h-14a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h2"
              ></path><path d="M17 9v-4a2 2 0 0 0 -2 -2h-6a2 2 0 0 0 -2 2v4"
              ></path><path
                d="M7 13m0 2a2 2 0 0 1 2 -2h6a2 2 0 0 1 2 2v4a2 2 0 0 1 -2 2h-6a2 2 0 0 1 -2 -2z"
              ></path></svg
            >
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>
